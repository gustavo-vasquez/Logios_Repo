@model int?

<script>$("#deleteModal").modal('show');</script>

<div class="modal fade" id="deleteModal">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-center text-info"><b>Eliminar ejercicio <span class="glyphicon glyphicon-trash"></span></b></h3>
                </div>
                <div class="modal-body text-center">
                    <h4>¿Está seguro que desea eliminar el ejercicio Nº @Model.Value?</h4>
                </div>
                <div class="modal-footer">
                    <div class="col-md-12">
                        <div class="col-md-6">                            
                            @using (Html.BeginForm(
                                "DeleteExercise",
                                "Administrator",
                                new { id = Model.Value },
                                FormMethod.Post,
                                new { Id = "DeleteForm", @class = "form", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-block btn-success">Si</button>
                            }
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-block btn-danger" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 @model Boolean?

<script>        
    $('#tweetBtn').attr('data-text', '¡Resolví un ejercicio de ' + $('#NameOfTopic').text() + ' en Logios! ¡Pruébalo ahora!');

    var resultModal = $('#resultModal')

    resultModal.modal({
        keyboard: true,
        backdrop: 'static',
        show: true
    });

    function closeModal(result) {
        if (result) {
            resultModal.modal('hide');
            window.location.reload(true);
        } else {
            resultModal.modal('hide');
        }
    }
</script>

@if (Model.Value)
{
    <div id="resultModal" class="modal fade">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title text-center text-success"><b>¡RESPUESTA CORRECTA! <span class="glyphicon glyphicon-ok-circle"></span></b></h3>
                    </div>
                    <div class="modal-body text-center">
                        <h4>¡Felicitaciones!</h4>
                        <h4>Has obtenido un punto por resolver este ejercicio.</h4>
                        <p><i>(NOTA: Sólo se otorgan puntos la primera vez.)</i></p>
                    </div>
                    <div class="modal-footer">
                        <div>
                            <div class="col-md-9 col-md-pull-6">
                                <a id="tweetBtn" href="https://twitter.com/share" class="twitter-share-button" data-text="" data-size="large"></a>
                                <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>                                    
                            </div>
                            <div class="col-md-3 col-md-pull-1">
                                <button type="button" class="btn btn-info" onclick="closeModal(true)">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div id="resultModal" class="modal fade">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title text-center text-danger"><b>¡RESPUESTA INCORRECTA! <span class="glyphicon glyphicon-remove-circle"></span></b></h3>
                    </div>
                    <div class="modal-body text-center">
                        <h4>¡Vaya!</h4>
                        <h4>Has fallado...</h4>
                    </div>
                    <div class="modal-footer">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-info"  onclick="closeModal(false)">Inténtalo de nuevo</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@model string

<div class="col-md-3">
    <p style="padding-top: 13px;">Compartir en:</p>
</div>

<!-- Share on Twitter -->
<div class="col-md-2">
    <a class="twitter popup effect" href="https://twitter.com/intent/tweet?text=¡He ganado el trofeo @Model en Logios! Tú también puedes ganarlo, ¡anímate!&url=@(Request.Url.AbsoluteUri)&via=Logios_OK" title="Compartir en Twitter">
        <img src="~/Content/images/share_social/1465195920_twitter_circle.png" width="48" alt="Twittear" />
    </a>
    <script>
      $('.popup').click(function(event) {
        var width  = 575,
            height = 400,
            left   = ($(window).width()  - width)  / 2,
            top    = ($(window).height() - height) / 2,
            url    = this.href,
            opts   = 'status=1' +
                     ',width='  + width  +
                     ',height=' + height +
                     ',top='    + top    +
                     ',left='   + left;

        window.open(url, 'twitter', opts);

        return false;
      });
    </script>
</div>

<!-- Share on Facebook -->

<div class="col-md-2">    
    <a href="http://www.facebook.com/sharer/sharer.php?u=http://www.unlam.edu.ar" class="effect" target="_blank" onclick="window.open(this.href, '', 'toolbar=0,status=0,width=626,height=436'); return false;" title="Compartir en Facebook">
        <img src="~/Content/images/share_social/1465196478_facebook_circle.png" width="48" alt="Facebook" />
    </a>
</div>

<!-- Share on Google+ -->

<div class="col-md-2">    
    <a title="Compartir en Google+" href="https://plus.google.com/share?url=http://www.unlam.edu.ar" class="effect" target="_blank" onclick="window.open(this.href,'','scrollbars=1,resizable=1,width=400,height=620');return false;">
        <img src="~/Content/images/share_social/1465196475_google_circle.png" width="48" alt="Google+" />
    </a>
</div>
@model Logios.Entities.Exercise

@{
    ViewBag.Title = "Mostrar ejercicio";
}

<script type="text/javascript" src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-MML-AM_CHTML-full"></script>

<script>    
    function ViewDevelopment() {
        if ($('#DevelopmentField').is(':hidden'))
            $('#DevelopmentField').show();        
        else
            $('#DevelopmentField').hide();
    }    
</script>

<h2>Resuelva el siguiente ejercicio:</h2>

<div class="container">
    <div class="row col-lg-3 well well-sm">
        @Html.Raw(Model.Problem)
    </div>
    <div class="clearfix"></div>
    
    <hr />

    <div class="row">
        <button id="ViewDevelopment" class="btn btn-info" onclick="ViewDevelopment();">Visualizar desarrollo</button>
        <div class="clearfix"></div>        
        <br />
        <div id="DevelopmentField" class="col-lg-3 well well-sm" hidden>
            @Html.Raw(Model.Development)
        </div>
    </div>
    <div class="clearfix"></div>

    <hr />
    
    <div class="row col-lg-6">
        <div id="divSolution">
            <h2>Escribir solucion:</h2>
            @using (@Html.BeginForm("Show", "Exercise", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="form-inline">
                    <input type="text" id="answer" name="answer" class="form-control" />
                    <button type="submit" class="btn btn-success">Enviar respuesta</button>
                </div>
            }
        </div>
    </div>

    <div class="clearfix"></div>
    <br /><br />
    @if(IsPost)
    { 
        if (ViewBag.Result)
        {
            <div class="alert alert-dismissible alert-success">        
                <p class="text-center"><b>¡Respuesta correcta!</b></p>
            </div>
        }
        else
        {
            <div class="alert alert-dismissible alert-danger">
                <p class="text-center"><b>¡Incorrecto!</b></p>
            </div>
        } 
    }
</div>
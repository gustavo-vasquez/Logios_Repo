<!-- Share on Twitter -->
<div class="col-md-2">    
    <a id="tweetBtn" class="twitter popup effect" href="" title="Compartir en Twitter"><img src="~/Content/images/share_social/1465195920_twitter_circle.png" width="48" alt="Twittear" /></a>
    <script>
        numExercise = $('#ExcerciseNumber').text();
        urlParam = location.protocol + "//" + location.host + "/Exercise/Show/" + numExercise;
        textParam = "¡Resolví un ejercicio de " + $('#NameOfTopic').text() + " en Logios! ¡Pruébalo ahora!";
        viaParam = "Logios_OK";
        $('#tweetBtn').attr('href', 'https://twitter.com/intent/tweet?text=' + textParam + '&url=' + urlParam + '&via=' + viaParam);

        $('.popup').click(function (event) {
            var width  = 575,
                height = 400,
                left   = ($(window).width()  - width)  / 2,
                top    = ($(window).height() - height) / 2,
                url    = this.href,
                opts   = 'status=1' +
                         ',width='  + width  +
                         ',height=' + height +
                         ',top='    + top    +
                         ',left='   + left;

            window.open(url, 'twitter', opts);
            return false;
      });
    </script>
</div>


@model Logios.Models.EditUserViewModel

@{
    ViewBag.Title = "Editar usuario";
}

<h1>@ViewBag.Title</h1>

<hr />

<div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Edit", "UsersAdmin", FormMethod.Post, new { id = "EditForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <fieldset>
                <legend class="text-info">Editar la cuenta de usuario</legend>
                <div class="form-group">
                    <label for="Email" class="col-md-3 control-label">E-mail:</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail..." })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="UserName" class="col-md-3 control-label">Nombre de usuario:</label>
            <div class="col-md-9">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nombre de usuario..." })
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Roles:</label>
                    <div class="col-md-9" style="padding-left: 40px;">
                        <div class="radio">
                            @foreach (var item in Model.RolesList)
                            {
                                <div>
                                    <input type="radio" id="@item.Value" name="SelectedRole" value="@item.Value" checked="@item.Selected" />
                                    <label for="@item.Value">@item.Value</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-7">
                        <button type="submit" class="btn btn-success">Confirmar</button>
                        <button type="button" class="btn btn-danger" onclick="window.location.href = '/Administrator/ControlPanel';">Cancelar</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model Logios.Models.ChangeUserNameViewModel
@{
    ViewBag.Title = "Cambiar Nombre de Usuario";
}

<div class="vertical-space"></div>
<div class="col-md-offset-3 col-md-6">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Complete los siguientes campos</h4>
        <hr />
        <div class="form-group">
            <label class="col-md-4 control-label">Nombre Actual:</label>
            <div class="col-md-7">
                @User.Identity.Name
                
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Nuevo Usuario:</label>
            <div class="col-md-7">
                @Html.TextBoxFor(m => m.NewName, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Cambiar Nombre" class="btn btn-default" />
            </div>
        </div>
    }
</div>


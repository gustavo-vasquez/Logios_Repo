    @using (Html.BeginForm("Index", "Manage", FormMethod.Post, new { id = "changeAvatarForm", enctype = "multipart/form-data" }))
    {
        <div class="col-md-3" style="border: 1px solid gray; border-radius: 3px; padding-top: 20px;">
            <div class="row text-center">
                <img src="~/Content/images/avatars/@Model.ProfilePicture" width="192" />
            </div>        
            <div class="row">            
                @Html.AntiForgeryToken();
                <label for="newAvatar" class="btn btn-sm btn-block btn-info">Cambiar imágen de perfil</label>
                @Html.TextBoxFor(m => m.newAvatar, new { type = "file", style = "display: none;" })                                                
            </div>                                                            
        </div>

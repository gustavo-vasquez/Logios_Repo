            </div>
        </div>

        <div class="form-group">
            <label class="col-md-5 control-label">Nombre de usuario:</label>
            <div class="col-md-7">
                <label class="text-default">@User.Identity.Name @Html.ActionLink("Cambiar", "ChangeName")</label>
            </div>
        </div>

        <div class="form-group vertical-space-2">
            <label class="col-md-5 control-label">Contraseña:</label>
            <div class="col-md-7">                
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Cambiar la contraseña", "ChangePassword", null, new { @class = "btn btn-sm btn-info" })
                }
                else
                {
                    @Html.ActionLink("Crear contraseña", "SetPassword", null, new { @class = "btn btn-sm btn-info" })
                }                
            </div>

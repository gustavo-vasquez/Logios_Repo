@model Logios.DTOs.TopicAreaDTO

@{
    ViewBag.Title = "Editar área temática";
}
<h1>@ViewBag.Title</h1>
<hr />
<div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("EditArea", "TopicArea", FormMethod.Post, new { id = "EditAreaForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.TopicAreaId)
            <fieldset>
                <legend class="text-info">Editar área temática existente.</legend>
                <div class="form-group">
                    <label for="Description" class="col-md-3 control-label">Descripción:</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Descripción..." })
                        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-7">
                        <button type="submit" class="btn btn-success">Confirmar</button>
                        <button type="button" class="btn btn-danger" onclick="window.location.href = '/Administrator/ControlPanel';">Cancelar</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}